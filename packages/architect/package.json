{
    "name": "@tinyburg/architect",
    "version": "0.0.1",
    "description": "Creates a TinyTower instance in an android emulator on a local or remote docker host",
    "keywords": [
        "tinyburg",
        "nimblebit",
        "TinyTower",
        "Tiny Tower"
    ],
    "homepage": "https://github.com/leonitousconforti/tinyburg",
    "repository": {
        "type": "git",
        "url": "https://github.com/leonitousconforti/tinyburg.git",
        "directory": "packages/architect"
    },
    "license": "MIT",
    "author": "Leo Conforti <leo@leoconforti.us> (https://leoconforti.us)",
    "type": "module",
    "main": "dist/src/index.js",
    "bin": {
        "tinyburg-architect": "./dist/bin/cli.js"
    },
    "scripts": {
        "build": "heft build --clean",
        "docker:build": "docker build emulator -t tinyburg/architect:emulator-9322596_sysimg-31-aosp-x64_frida-16.0.8",
        "docker:push": "docker push tinyburg/architect:emulator-9322596_sysimg-31-aosp-x64_frida-16.0.8",
        "lint": "eslint .",
        "terraform:init": "cd infrastructure && terraform init",
        "terraform:plan": "cd infrastructure && terraform plan",
        "terraform:provision": "cd infrastructure && terraform apply"
    },
    "dependencies": {
        "commander": "~9.4.1",
        "debug": "~4.3.4",
        "dockerode": "~3.3.4",
        "frida": "~16.0.7"
    },
    "devDependencies": {
        "@rushstack/eslint-config": "~3.1.1",
        "@rushstack/heft": "~0.48.8",
        "@tinyburg/tsconfig-rig": "workspace:*",
        "@types/debug": "~4.1.7",
        "@types/dockerode": "~3.3.14",
        "@types/node": "~18.11.11",
        "eslint": "~8.29.0",
        "eslint-config-prettier": "~8.5.0",
        "eslint-plugin-prettier": "~4.2.1",
        "eslint-plugin-unicorn": "~45.0.2",
        "prettier": "~2.8.1",
        "typescript": "~4.9.3"
    },
    "engines": {
        "node": ">=16.18.0"
    }
}
