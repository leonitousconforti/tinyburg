{
    "name": "@tinyburg/architect",
    "version": "0.0.1",
    "description": "Creates a TinyTower instance in an android emulator on a local or remote docker host",
    "keywords": [
        "tinyburg",
        "nimblebit",
        "TinyTower",
        "Tiny Tower"
    ],
    "homepage": "https://github.com/leonitousconforti/tinyburg",
    "repository": {
        "type": "git",
        "url": "https://github.com/leonitousconforti/tinyburg.git",
        "directory": "packages/architect"
    },
    "license": "MIT",
    "author": "Leo Conforti <leo@leoconforti.us> (https://leoconforti.us)",
    "type": "module",
    "main": "dist/index.js",
    "files": [
        "dist/",
        "emulator/",
        "jwt-provider",
        "envoy"
    ],
    "scripts": {
        "build": "heft build --clean",
        "docker:build": "docker build ./emulator -t tinyburg/architect:emulator-9322596_sysimg-31-google-apis-x64_frida-16.0.8",
        "docker:run": "docker run --rm --device /dev/kvm --publish 5554:5554/tcp --publish 5555:5555/tcp --publish 8554:8554/tcp --publish 27042:27042/tcp -it tinyburg/architect:emulator-9322596_sysimg-31-google-apis-x64_frida-16.0.8",
        "lint": "eslint .",
        "test": "ts-node --esm ./src/test.ts"
    },
    "dependencies": {
        "@tinyburg/architect-viewer": "workspace:*",
        "debug": "~4.3.4",
        "dockerode": "~3.3.4",
        "tar-fs": "~2.1.1"
    },
    "devDependencies": {
        "@rushstack/eslint-config": "~3.1.1",
        "@rushstack/heft": "~0.48.8",
        "@tinyburg/apks": "workspace:*",
        "@tinyburg/tsconfig-rig": "workspace:*",
        "@types/debug": "~4.1.7",
        "@types/docker-modem": "~3.0.2",
        "@types/dockerode": "~3.3.14",
        "@types/node": "~18.11.11",
        "@types/tar-fs": "~2.0.1",
        "eslint": "~8.29.0",
        "eslint-config-prettier": "~8.5.0",
        "eslint-plugin-prettier": "~4.2.1",
        "eslint-plugin-unicorn": "~45.0.2",
        "prettier": "~2.8.1",
        "ts-node": "~10.9.1",
        "typescript": "~4.9.3"
    },
    "engines": {
        "node": ">=16.18.0"
    }
}
