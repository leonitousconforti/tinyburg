{
    "name": "@tinyburg/architect",
    "version": "0.0.1-alpha.0",
    "description": "Creates a TinyTower instance in an android emulator on a local or remote docker host",
    "keywords": [
        "tinyburg",
        "nimblebit",
        "TinyTower",
        "Tiny Tower"
    ],
    "homepage": "https://github.com/leonitousconforti/tinyburg",
    "repository": {
        "type": "git",
        "url": "https://github.com/leonitousconforti/tinyburg.git",
        "directory": "packages/architect"
    },
    "license": "MIT",
    "author": "Leo Conforti <leo@leoconforti.us> (https://leoconforti.us)",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "architect": "./dist/cli.js"
    },
    "files": [
        "dist/",
        "emulator/",
        "protobuf/",
        ".env.example"
    ],
    "scripts": {
        "_phase:build": "heft run --only build -- --clean",
        "_phase:test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" heft run --only test -- --clean",
        "build": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" heft test --clean",
        "protobuf": "buf generate"
    },
    "dependencies": {
        "debug": "~4.3.4",
        "docker-modem": "~3.0.8",
        "dockerode": "~3.3.5",
        "dotenv": "~16.3.1",
        "frida": "~16.1.0",
        "tar-fs": "~3.0.4",
        "yargs": "~17.7.2"
    },
    "devDependencies": {
        "@bufbuild/buf": "~1.26.1",
        "@bufbuild/protobuf": "~1.3.1",
        "@bufbuild/protoc-gen-es": "~1.3.1",
        "@connectrpc/protoc-gen-connect-es": "~1.0.0",
        "@rushstack/eslint-config": "3.3.4",
        "@rushstack/heft": "0.61.0",
        "@rushstack/heft-jest-plugin": "0.9.2",
        "@rushstack/heft-lint-plugin": "~0.2.2",
        "@rushstack/heft-typescript-plugin": "~0.2.2",
        "@tinyburg/apks": "workspace:*",
        "@tinyburg/tsconfig-rig": "workspace:*",
        "@types/debug": "~4.1.9",
        "@types/docker-modem": "~3.0.2",
        "@types/dockerode": "~3.3.18",
        "@types/heft-jest": "1.0.4",
        "@types/node": "20.6.3",
        "@types/tar-fs": "~2.0.1",
        "@types/yargs": "~17.0.24",
        "eslint": "8.50.0",
        "eslint-config-prettier": "~9.0.0",
        "eslint-plugin-prettier": "~5.0.0",
        "eslint-plugin-unicorn": "~48.0.1",
        "prettier": "~3.0.3",
        "typescript": "5.2.2"
    },
    "engines": {
        "node": ">=16"
    }
}
