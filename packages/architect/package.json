{
    "name": "@tinyburg/architect",
    "version": "0.0.1-alpha.0",
    "description": "Creates a TinyTower instance in an android emulator on a local or remote docker host",
    "keywords": [
        "tinyburg",
        "nimblebit",
        "TinyTower",
        "Tiny Tower"
    ],
    "homepage": "https://github.com/leonitousconforti/tinyburg",
    "repository": {
        "type": "git",
        "url": "https://github.com/leonitousconforti/tinyburg.git",
        "directory": "packages/architect"
    },
    "license": "MIT",
    "author": "Leo Conforti <leo@leoconforti.us> (https://leoconforti.us)",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "architect": "./dist/cli.js"
    },
    "files": [
        "dist/",
        "emulator/",
        "protobuf/",
        ".env.example"
    ],
    "scripts": {
        "_phase:build": "heft run --only build -- --clean",
        "_phase:test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" heft run --only test -- --clean",
        "build": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" heft test --clean",
        "docker:build": "docker build ./emulator --platform linux/x86_64 --tag ghcr.io/leonitousconforti/tinyburg/architect_emulator:10086546_sys-30-google-apis-x64-r12_frida-16.0.19",
        "docker:run": "docker run --rm --platform linux/x86_64 --device /dev/kvm --publish 5554:5554/tcp --publish 5555:5555/tcp --publish 8554:8554/tcp --publish 27042:27042/tcp -it ghcr.io/leonitousconforti/tinyburg/architect_emulator:10086546_sys-30-google-apis-x64-r12_frida-16.0.19",
        "protobuf:clean": "rimraf --glob protobuf/**/*.js && rimraf --glob protobuf/**/*.d.ts",
        "protobuf:gen": "protoc -I ./protobuf --ts_out ./protobuf --ts_opt optimize_code_size --ts_opt output_javascript --ts_opt eslint_disable ./protobuf/emulator_controller.proto ./protobuf/rtc_service.proto",
        "stress": "DEBUG=tinyburg:* ts-node --files --esm ./src/stress-test.ts"
    },
    "dependencies": {
        "debug": "~4.3.4",
        "dockerode": "~3.3.5",
        "dockerode-compose": "~1.3.3",
        "frida": "~16.1.0",
        "supports-color": "~9.4.0",
        "tar-fs": "~2.1.1",
        "yargs": "~17.7.2"
    },
    "devDependencies": {
        "@protobuf-ts/plugin": "~2.9.0",
        "@protobuf-ts/protoc": "~2.9.0",
        "@protobuf-ts/runtime": "~2.9.0",
        "@protobuf-ts/runtime-rpc": "~2.9.0",
        "@rushstack/eslint-config": "3.3.2",
        "@rushstack/heft": "0.57.0",
        "@rushstack/heft-jest-plugin": "0.7.15",
        "@rushstack/heft-lint-plugin": "~0.1.18",
        "@rushstack/heft-typescript-plugin": "~0.1.17",
        "@tinyburg/apks": "workspace:*",
        "@tinyburg/tsconfig-rig": "workspace:*",
        "@types/debug": "~4.1.8",
        "@types/docker-modem": "~3.0.2",
        "@types/dockerode": "~3.3.18",
        "@types/heft-jest": "1.0.3",
        "@types/node": "20.4.2",
        "@types/tar-fs": "~2.0.1",
        "@types/yargs": "~17.0.24",
        "dotenv": "~16.3.1",
        "eslint": "8.45.0",
        "eslint-config-prettier": "~8.8.0",
        "eslint-plugin-prettier": "~4.2.1",
        "eslint-plugin-unicorn": "~47.0.0",
        "prettier": "~2.8.8",
        "rimraf": "~5.0.1",
        "typescript": "5.1.6"
    },
    "engines": {
        "node": ">=16"
    }
}
