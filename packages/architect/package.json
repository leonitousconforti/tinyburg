{
    "name": "@tinyburg/architect",
    "version": "0.0.1",
    "description": "Creates a TinyTower instance in an android emulator on a local or remote docker host",
    "keywords": [
        "tinyburg",
        "nimblebit",
        "TinyTower",
        "Tiny Tower"
    ],
    "homepage": "https://github.com/leonitousconforti/tinyburg",
    "repository": {
        "type": "git",
        "url": "https://github.com/leonitousconforti/tinyburg.git",
        "directory": "packages/architect"
    },
    "license": "MIT",
    "author": "Leo Conforti <leo@leoconforti.us> (https://leoconforti.us)",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/src/index.d.ts",
            "import": "./dist/src/index.js"
        },
        "./protobuf/*": {
            "types": "./dist/protobuf/*.d.ts",
            "import": "./dist/protobuf/*.js"
        },
        "./*": {
            "types": "./dist/src/*.d.ts",
            "import": "./dist/src/*.js"
        }
    },
    "main": "dist/src/index.js",
    "bin": {
        "architect": "./dist/src/cli.js"
    },
    "files": [
        "dist/"
    ],
    "scripts": {
        "_phase:build": "heft run --only build -- --clean",
        "_phase:test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" heft run --only test -- --clean",
        "ansible-lint": "ansible-lint --fix ./infrastructure.ansible.yaml",
        "build": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" heft test --clean",
        "protobuf": "buf generate"
    },
    "dependencies": {
        "debug": "~4.3.4",
        "docker-modem": "~5.0.1",
        "dockerode": "~4.0.0",
        "frida": "~16.1.0",
        "tar-fs": "~3.0.4",
        "yargs": "~17.7.2"
    },
    "devDependencies": {
        "@bufbuild/buf": "~1.27.1",
        "@bufbuild/protobuf": "~1.4.0",
        "@bufbuild/protoc-gen-es": "~1.4.0",
        "@connectrpc/protoc-gen-connect-es": "~1.1.1",
        "@rushstack/eslint-config": "3.4.1",
        "@rushstack/heft": "0.62.3",
        "@rushstack/heft-jest-plugin": "0.10.0",
        "@rushstack/heft-lint-plugin": "~0.2.9",
        "@rushstack/heft-typescript-plugin": "~0.2.9",
        "@tinyburg/apks": "workspace:*",
        "@tinyburg/tsconfig-rig": "workspace:*",
        "@types/debug": "~4.1.10",
        "@types/docker-modem": "~3.0.5",
        "@types/dockerode": "~3.3.21",
        "@types/heft-jest": "1.0.5",
        "@types/node": "20.8.8",
        "@types/tar-fs": "~2.0.3",
        "@types/yargs": "~17.0.29",
        "dotenv": "~16.3.1",
        "eslint": "8.52.0",
        "eslint-config-prettier": "~9.0.0",
        "eslint-plugin-prettier": "~5.0.1",
        "eslint-plugin-unicorn": "~48.0.1",
        "prettier": "~3.0.3",
        "typescript": "5.2.2"
    },
    "engines": {
        "node": ">=16"
    }
}
