{
    "$schema": "https://developer.microsoft.com/json-schemas/heft/heft.schema.json",
    "eventActions": [
        {
            "actionKind": "deleteGlobs",
            "heftEvent": "clean",
            "actionId": "defaultClean",
            "globsToDelete": ["dist"]
        },
        {
            "actionKind": "copyFiles",
            "heftEvent": "bundle",
            "actionId": "copyCommandsAndVendor",
            "copyOperations": [
                {
                    "sourceFolder": ".",
                    "destinationFolders": ["dist"],
                    "includeGlobs": ["commands/*", "vendor/*"],
                    "excludeGlobs": ["commands/*.ts", "vendor/*.apk", "vendor/*.xz"]
                }
            ]
        }
    ]
}
