{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "types": ["node"],
        "composite": true,
        "importsNotUsedAsValues": "preserve"
    },
    "include": ["./**/*.ts", "./**/*.js"],
    "exclude": ["./**/*agent*.ts", "./**/*agent*.js"],
    "references": [{ "path": "../src/tsconfig.src.json" }]
}
