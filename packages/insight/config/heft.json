{
    "$schema": "https://developer.microsoft.com/json-schemas/heft/heft.schema.json",
    "heftPlugins": [{ "plugin": "@rushstack/heft-jest-plugin" }],
    "eventActions": [
        {
            "actionKind": "deleteGlobs",
            "heftEvent": "clean",
            "actionId": "defaultClean",
            "globsToDelete": ["dist"]
        },
        {
            "actionKind": "copyFiles",
            "heftEvent": "post-build",
            "actionId": "copyNeededTsconfig",
            "copyOperations": [
                {
                    "sourceFolder": ".",
                    "destinationFolders": ["dist/"],
                    "includeGlobs": ["src/tsconfig.agents.json", "src/tsconfig.src.json", "tsconfig.base.json"]
                }
            ]
        },
        {
            "actionKind": "deleteGlobs",
            "heftEvent": "post-build",
            "actionId": "cleanUnnecessaryTempFiles",
            "globsToDelete": ["temp"]
        }
    ]
}
