{
    "name": "Node.js & TypeScript",
    "image": "mcr.microsoft.com/devcontainers/base:bullseye",

    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers/features/rust:1": {},
        "ghcr.io/devcontainers/features/python:1": {},
        "ghcr.io/devcontainers/features/git-lfs:1": {},
        "ghcr.io/devcontainers/features/terraform:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers-contrib/features/act:1": {},
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers-contrib/features/black:2": {},
        "ghcr.io/devcontainers-contrib/features/mitmproxy:2": {},
        "ghcr.io/devcontainers-contrib/features/actionlint:1": {},
        "ghcr.io/devcontainers-contrib/features/digitalocean-cli:1": {},
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
        "ghcr.io/frntn/devcontainers-features/gitleaks:1": {
            "version": "v8.16.0"
        },
        "ghcr.io/devcontainers-contrib/features/apt-get-packages:1": {
            "packages": "chromium"
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "kisstkondoros.vscode-codemetrics",
                "visualstudioexptteam.vscodeintellicode",
                "esbenp.prettier-vscode",
                "editorconfig.editorconfig",
                "streetsidesoftware.code-spell-checker",
                "ms-azuretools.vscode-docker",
                "icsharpcode.ilspy-vscode",
                "shd101wyy.markdown-preview-enhanced",
                "ms-python.python",
                "stxr.iconfont-preview",
                "redhat.ansible",
                "HashiCorp.terraform",
                "DavidAnson.vscode-markdownlint",
                "eamodio.gitlens",
                "zxh404.vscode-proto3",
                "GitHub.vscode-pull-request-github",
                "mutantdino.resourcemonitor",
                "ms-python.black-formatter",
                "zxh404.vscode-proto3",
                "Prisma.prisma",
                "bradlc.vscode-tailwindcss"
            ],
            "settings": {
                "cSpell.enabled": true,
                "editor.formatOnSave": true,
                "editor.formatOnPaste": true,
                "editor.bracketPairColorization.enabled": true,
                "codemetrics.basics.DecorationModeEnabled": false,
                "codemetrics.basics.OverviewRulerModeEnabled": false,
                "editor.defaultFormatter": "EditorConfig.EditorConfig",
                "prettier.prettierPath": "./common/autoinstallers/rush-prettier/node_modules/prettier",
                "[typescript][typescriptreact][javascript][javascriptreact][json][jsonc]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[css][scss][postcss][tailwindcss]": {
                    "editor.defaultFormatter": "vscode.css-language-features"
                },
                "[prisma]": {
                    "editor.defaultFormatter": "Prisma.prisma"
                },
                "[python]": {
                    "editor.wordBasedSuggestions": false,
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": true
                    }
                },
                "python.formatting.provider": "black",
                "isort.args": ["--profile", "black"],
                "files.associations": { "*.json": "jsonc", "package.json": "json", "cloudinit.conf": "plaintext" },
                "files.exclude": {
                    "**/.git": true,
                    "**/.svn": true,
                    "**/.hg": true,
                    "**/CVS": true,
                    "**/.DS_Store": true,
                    "**/Thumbs.db": true,
                    "**/.cache": true,
                    "**/.heft": true,
                    "**/.rush": true,
                    "apps/**/temp": true,
                    "packages/**/temp": true,
                    "**/rush-logs": true
                },
                "cSpell.enableFiletypes": [
                    "dockercompose",
                    "dockerfile",
                    "editorconfig",
                    "markdown-math",
                    "markdown_latex_combined",
                    "shellscript"
                ],
                "cSpell.words": [
                    "anbox",
                    "apkpure",
                    "apkmirror",
                    "apk",
                    "apks",
                    "adbkey",
                    "anims",
                    "authproxy",
                    "bitbook",
                    "Bitizen",
                    "bitizens",
                    "bitprint",
                    "bitprints",
                    "buxcost",
                    "cloudinit",
                    "Conforti",
                    "corlib",
                    "coturn",
                    "dockerode",
                    "emittery",
                    "envoymesh",
                    "esbuild",
                    "fastify",
                    "Formbody",
                    "frida",
                    "gplaydl",
                    "Grayscaled",
                    "hostable",
                    "Jsep",
                    "klass",
                    "leonitousconforti",
                    "logcat",
                    "mediapath",
                    "mediatype",
                    "Nimblebit",
                    "npmjs",
                    "nonbrowser",
                    "noreply",
                    "Pino",
                    "pnpmfile",
                    "prodimgs",
                    "proto",
                    "protobuf",
                    "proxied",
                    "Proxying",
                    "rushall",
                    "rushstack",
                    "stockall",
                    "structs",
                    "Thresholded",
                    "tinyburg",
                    "tinytower",
                    "Upscaled"
                ]
            }
        }
    },

    "runArgs": ["--network=host"],
    "postCreateCommand": "/bin/bash ./setup.sh",
    "remoteEnv": { "PUPPETEER_EXECUTABLE_PATH": "/usr/bin/chromium" },
    "containerEnv": { "PUPPETEER_EXECUTABLE_PATH": "/usr/bin/chromium" }
}
