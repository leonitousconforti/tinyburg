{
    "name": "Node.js & TypeScript",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:18-bullseye",

    "features": {
        "ghcr.io/dhoeric/features/act:1": {},
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/rust:1": {},
        "ghcr.io/devcontainers/features/python:1": {},
        "ghcr.io/devcontainers/features/git-lfs:1": {},
        "ghcr.io/devcontainers/features/terraform:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers-contrib/features/digitalocean-cli:1": {},
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
        "ghcr.io/frntn/devcontainers-features/gitleaks:1": {
            "version": "v8.16.0"
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "kisstkondoros.vscode-codemetrics",
                "visualstudioexptteam.vscodeintellicode",
                "esbenp.prettier-vscode",
                "editorconfig.editorconfig",
                "streetsidesoftware.code-spell-checker",
                "ms-azuretools.vscode-docker",
                "icsharpcode.ilspy-vscode",
                "shd101wyy.markdown-preview-enhanced",
                "ms-python.python",
                "stxr.iconfont-preview",
                "redhat.ansible",
                "HashiCorp.terraform",
                "DavidAnson.vscode-markdownlint",
                "eamodio.gitlens",
                "zxh404.vscode-proto3",
                "GitHub.vscode-pull-request-github",
                "mutantdino.resourcemonitor",
                "ms-python.black-formatter"
            ],
            "settings": {
                "remote.localPortHost": "allInterfaces",
                "cSpell.enabled": true,
                "editor.formatOnSave": true,
                "editor.formatOnPaste": true,
                "editor.bracketPairColorization.enabled": true,
                "codemetrics.basics.DecorationModeEnabled": false,
                "codemetrics.basics.OverviewRulerModeEnabled": false,
                "editor.defaultFormatter": "EditorConfig.EditorConfig",
                "[typescript][typescriptreact]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[javascript][javascriptreact]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[json][jsonc]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[python]": {
                    "editor.wordBasedSuggestions": false,
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": true
                    }
                },
                "python.formatting.provider": "black",
                "isort.args": ["--profile", "black"],
                "files.associations": { "*.json": "jsonc", "package.json": "json", "cloudinit.conf": "plaintext" },
                "cSpell.enableFiletypes": [
                    "dockercompose",
                    "dockerfile",
                    "editorconfig",
                    "markdown-math",
                    "markdown_latex_combined",
                    "shellscript"
                ],
                "cSpell.words": [
                    "anbox",
                    "apkpure",
                    "apkmirror",
                    "apk",
                    "apks",
                    "adbkey",
                    "anims",
                    "authproxy",
                    "bitbook",
                    "Bitizen",
                    "bitizens",
                    "buxcost",
                    "cloudinit",
                    "Conforti",
                    "corlib",
                    "coturn",
                    "dockerode",
                    "emittery",
                    "envoymesh",
                    "esbuild",
                    "fastify",
                    "Formbody",
                    "frida",
                    "gplaydl",
                    "Grayscaled",
                    "hostable",
                    "Jsep",
                    "klass",
                    "leonitousconforti",
                    "logcat",
                    "mediapath",
                    "mediatype",
                    "Nimblebit",
                    "npmjs",
                    "nonbrowser",
                    "noreply",
                    "Pino",
                    "pnpmfile",
                    "prodimgs",
                    "proto",
                    "protobuf",
                    "proxied",
                    "Proxying",
                    "rushall",
                    "rushstack",
                    "stockall",
                    "structs",
                    "Thresholded",
                    "tinyburg",
                    "tinytower",
                    "Upscaled"
                ]
            }
        }
    },

    "appPort": ["3000:3000"],
    "postCreateCommand": "/bin/bash ./setup.sh"
}
