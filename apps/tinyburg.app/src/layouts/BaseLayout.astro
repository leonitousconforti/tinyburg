---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "The community marketplace for TinyTower players." } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=VT323&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body>
		<!-- Animated pixel clouds in the background -->
		<div class="clouds">
			<div class="cloud cloud-1"></div>
			<div class="cloud cloud-2"></div>
			<div class="cloud cloud-3"></div>
		</div>

		<slot />
	</body>
</html>

<style is:global>
	/* TinyTower-inspired color palette */
	:root {
		/* Sky colors from the game */
		--sky-light: #87ceeb;
		--sky-blue: #4fa4d4;
		--sky-dark: #2d7bb3;

		/* Floor type colors inspired by the game */
		--food-orange: #ff9966;
		--retail-blue: #66b3ff;
		--service-purple: #cc99ff;
		--creative-pink: #ff99cc;
		--recreation-green: #99ff99;
		--residential-yellow: #ffeb99;

		/* UI colors */
		--gold: #ffd700;
		--gold-dark: #b8860b;
		--dark-blue: #1a3a5c;
		--text-dark: #2c3e50;
		--text-light: #ffffff;
		--card-bg: rgba(255, 255, 255, 0.95);

		/* Provider colors */
		--google-red: #ea4335;
		--discord-blurple: #5865f2;

		/* Pixel-style shadows */
		--pixel-shadow: 4px 4px 0px rgba(0, 0, 0, 0.2);
		--pixel-shadow-hover: 6px 6px 0px rgba(0, 0, 0, 0.25);
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: "VT323", monospace;
		background: linear-gradient(
			180deg,
			var(--sky-light) 0%,
			var(--sky-blue) 50%,
			var(--sky-dark) 100%
		);
		min-height: 100vh;
		color: var(--text-dark);
		position: relative;
		overflow-x: hidden;
	}

	/* Animated clouds */
	.clouds {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		z-index: 0;
		overflow: hidden;
	}

	.cloud {
		position: absolute;
		background: rgba(255, 255, 255, 0.8);
		border-radius: 50px;
		animation: float linear infinite;
	}

	.cloud::before,
	.cloud::after {
		content: "";
		position: absolute;
		background: rgba(255, 255, 255, 0.8);
		border-radius: 50%;
	}

	.cloud-1 {
		width: 120px;
		height: 40px;
		top: 10%;
		animation-duration: 35s;
	}

	.cloud-1::before {
		width: 50px;
		height: 50px;
		top: -25px;
		left: 20px;
	}

	.cloud-1::after {
		width: 60px;
		height: 60px;
		top: -30px;
		left: 50px;
	}

	.cloud-2 {
		width: 150px;
		height: 50px;
		top: 25%;
		animation-duration: 45s;
		animation-delay: -15s;
	}

	.cloud-2::before {
		width: 60px;
		height: 60px;
		top: -30px;
		left: 25px;
	}

	.cloud-2::after {
		width: 70px;
		height: 70px;
		top: -35px;
		left: 60px;
	}

	.cloud-3 {
		width: 100px;
		height: 35px;
		top: 15%;
		animation-duration: 40s;
		animation-delay: -25s;
	}

	.cloud-3::before {
		width: 40px;
		height: 40px;
		top: -20px;
		left: 15px;
	}

	.cloud-3::after {
		width: 50px;
		height: 50px;
		top: -25px;
		left: 40px;
	}

	@keyframes float {
		from {
			left: -200px;
		}
		to {
			left: 100%;
		}
	}
</style>
