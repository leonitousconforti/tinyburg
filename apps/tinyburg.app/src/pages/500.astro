---
import CloudsLayout from "../layouts/CloudsLayout.astro";

interface Props {
    error: unknown;
}

const { error: _error } = Astro.props;
---

<CloudsLayout title="Error | Tinyburg" description="An error occurred.">
    <section class="relative flex min-h-screen flex-col items-center justify-center px-6 py-16 text-center sm:px-10">
        <div class="mx-auto w-full max-w-2xl">
            <div class="mb-8 flex justify-center">Content</div>

            <h1 class="font-pixel text-3xl text-white drop-shadow-[3px_3px_0_rgba(0,0,0,0.45)] sm:text-4xl">
                Oops, something went wrong!
            </h1>
            <p class="text-sky-light/80 mt-4 text-lg sm:text-xl">
                Something seems to have knocked a few floors loose. Our bitizens are working diligently on rebuilding
                the stack.
            </p>

            <div class="mt-8 flex flex-wrap justify-center gap-4">
                <a
                    href="/"
                    class="bg-gold text-dark-blue shadow-pixel hover:shadow-pixel-hover flex items-center gap-2 rounded-lg px-6 py-3 font-mono text-lg transition-all hover:-translate-x-0.5 hover:-translate-y-0.5"
                >
                    <span>üè†</span>
                    <span>Go Home</span>
                </a>
                <button
                    onclick="history.back()"
                    class="text-dark-blue shadow-pixel hover:shadow-pixel-hover flex items-center gap-2 rounded-lg bg-white/90 px-6 py-3 font-mono text-lg transition-all hover:-translate-x-0.5 hover:-translate-y-0.5"
                >
                    <span>‚Ü©Ô∏è</span>
                    <span>Go Back</span>
                </button>
            </div>
        </div>
    </section>
</CloudsLayout>
