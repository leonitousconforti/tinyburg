<style>
    .tower {
        display: flex;
        flex-direction: column;
        gap: 2px;
        background: var(--color-dark-blue);
        padding: 8px;
        border-radius: 8px 8px 0 0;
        box-shadow: var(--shadow-pixel-hover);
    }

    .floor {
        font-family: var(--font-mono);
        font-size: 1.2rem;
        padding: 1rem 2rem;
        text-align: center;
        min-width: 200px;
        animation: floorPop 0.5s ease-out backwards;
    }

    .floor:nth-child(1) {
        animation-delay: 0.1s;
    }
    .floor:nth-child(2) {
        animation-delay: 0.2s;
    }
    .floor:nth-child(3) {
        animation-delay: 0.3s;
    }
    .floor:nth-child(4) {
        animation-delay: 0.4s;
    }
    .floor:nth-child(5) {
        animation-delay: 0.5s;
    }
    .floor:nth-child(6) {
        animation-delay: 0.6s;
    }
    .floor:nth-child(7) {
        animation-delay: 0.7s;
    }
    .floor:nth-child(8) {
        animation-delay: 0.8s;
    }

    @keyframes floorPop {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .floor.roof {
        background: linear-gradient(135deg, #8b4513, #a0522d);
        color: white;
        border-radius: 8px 8px 0 0;
    }
    .floor.residential {
        background: var(--color-floor-residential);
    }
    .floor.food {
        background: var(--color-floor-food);
    }
    .floor.retail {
        background: var(--color-floor-retail);
    }
    .floor.service {
        background: var(--color-floor-service);
    }
    .floor.creative {
        background: var(--color-floor-creative);
    }
    .floor.recreation {
        background: var(--color-floor-recreation);
    }
    .floor.lobby {
        background: #ddd;
        border-radius: 0 0 4px 4px;
    }

    @media (max-width: 900px) {
        .tower {
            display: none;
        }
    }
</style>
