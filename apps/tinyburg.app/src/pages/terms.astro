<style>
	.legal-container {
		position: relative;
		z-index: 1;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 2rem;
		padding-top: 5rem;
	}

	.back-link {
		position: fixed;
		top: 2rem;
		left: 2rem;
		font-family: "Press Start 2P", cursive;
		font-size: 0.7rem;
		color: var(--text-light);
		text-decoration: none;
		padding: 0.75rem 1rem;
		background: rgba(26, 58, 92, 0.9);
		border-radius: 4px;
		transition: all 0.2s;
		box-shadow: var(--pixel-shadow);
		z-index: 100;
	}

	.back-link:hover {
		transform: translate(-2px, -2px);
		box-shadow: var(--pixel-shadow-hover);
		background: rgba(26, 58, 92, 0.95);
	}

	.legal-card {
		background: var(--card-bg);
		border-radius: 16px;
		padding: 3rem;
		width: 100%;
		max-width: 800px;
		box-shadow: var(--pixel-shadow-hover);
		border: 4px solid var(--gold);
		margin-bottom: 2rem;
	}

	h1 {
		font-family: "Press Start 2P", cursive;
		font-size: 1.2rem;
		color: var(--dark-blue);
		margin-bottom: 0.5rem;
		line-height: 1.4;
	}

	.last-updated {
		font-size: 1.1rem;
		color: var(--text-dark);
		opacity: 0.6;
		margin-bottom: 2rem;
		padding-bottom: 1rem;
		border-bottom: 2px solid #eee;
	}

	section {
		margin-bottom: 2rem;
	}

	h2 {
		font-family: "Press Start 2P", cursive;
		font-size: 0.75rem;
		color: var(--dark-blue);
		margin-bottom: 1rem;
		line-height: 1.5;
	}

	p {
		font-size: 1.3rem;
		line-height: 1.6;
		color: var(--text-dark);
		margin-bottom: 1rem;
	}

	ul {
		margin-left: 1.5rem;
		margin-bottom: 1rem;
	}

	li {
		font-size: 1.3rem;
		line-height: 1.6;
		color: var(--text-dark);
		margin-bottom: 0.5rem;
	}

	strong {
		color: var(--dark-blue);
	}

	@media (max-width: 600px) {
		.legal-card {
			padding: 1.5rem;
		}

		.back-link {
			top: 1rem;
			left: 1rem;
		}

		h1 {
			font-size: 1rem;
		}

		h2 {
			font-size: 0.65rem;
		}
	}
</style>
