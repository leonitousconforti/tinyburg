<style>
	.auth-container {
		position: relative;
		z-index: 1;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 2rem;
	}

	.back-link {
		position: absolute;
		top: 2rem;
		left: 2rem;
		font-family: "Press Start 2P", cursive;
		font-size: 0.7rem;
		color: var(--text-light);
		text-decoration: none;
		padding: 0.75rem 1rem;
		background: rgba(26, 58, 92, 0.8);
		border-radius: 4px;
		transition: all 0.2s;
		box-shadow: var(--pixel-shadow);
	}

	.back-link:hover {
		transform: translate(-2px, -2px);
		box-shadow: var(--pixel-shadow-hover);
		background: rgba(26, 58, 92, 0.95);
	}

	.auth-card {
		background: var(--card-bg);
		border-radius: 16px;
		padding: 3rem;
		width: 100%;
		max-width: 420px;
		box-shadow: var(--pixel-shadow-hover);
		border: 4px solid var(--gold);
	}

	.auth-header {
		text-align: center;
		margin-bottom: 2rem;
	}

	.auth-icon {
		font-size: 4rem;
		display: block;
		margin-bottom: 1rem;
		animation: bounce 2s ease-in-out infinite;
	}

	@keyframes bounce {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	.auth-header h1 {
		font-family: "Press Start 2P", cursive;
		font-size: 1rem;
		color: var(--dark-blue);
		margin-bottom: 0.75rem;
		line-height: 1.4;
	}

	.auth-header p {
		font-size: 1.4rem;
		color: var(--text-dark);
		opacity: 0.8;
	}

	.auth-providers {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.error-message {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		padding: 0.75rem 1rem;
		margin-bottom: 1.5rem;
		background: rgba(234, 67, 53, 0.1);
		border: 2px solid rgba(234, 67, 53, 0.3);
		border-radius: 8px;
		color: #c62828;
		font-size: 1.1rem;
	}

	.error-icon {
		font-size: 1.2rem;
	}

	.provider-button {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		width: 100%;
		padding: 1rem 1.5rem;
		border: none;
		border-radius: 8px;
		font-family: "VT323", monospace;
		font-size: 1.4rem;
		cursor: pointer;
		transition: all 0.2s;
		box-shadow: var(--pixel-shadow);
		text-decoration: none;
	}

	.provider-button:hover {
		transform: translate(-2px, -2px);
		box-shadow: var(--pixel-shadow-hover);
	}

	.provider-button:active {
		transform: translate(2px, 2px);
		box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.2);
	}

	.provider-button.google {
		background: #fff;
		color: #333;
		border: 2px solid #ddd;
	}

	.provider-button.google:hover {
		border-color: #4285f4;
	}

	.provider-button.discord {
		background: var(--discord-blurple);
		color: white;
	}

	.provider-button.discord:hover {
		background: #4752c4;
	}

	.provider-icon {
		width: 24px;
		height: 24px;
		flex-shrink: 0;
	}

	.benefits {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		margin-top: 2rem;
		padding: 1rem;
		background: rgba(79, 164, 212, 0.1);
		border-radius: 8px;
		border: 2px solid rgba(79, 164, 212, 0.2);
	}

	.benefit {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		font-size: 1.2rem;
		color: var(--dark-blue);
	}

	.benefit-icon {
		font-size: 1.3rem;
	}

	.terms {
		margin-top: 1.5rem;
		text-align: center;
	}

	.terms p {
		font-size: 1rem;
		color: var(--text-dark);
		opacity: 0.7;
	}

	.terms a {
		color: var(--sky-dark);
		text-decoration: none;
	}

	.terms a:hover {
		text-decoration: underline;
	}

	@media (max-width: 600px) {
		.auth-card {
			padding: 2rem;
		}

		.back-link {
			top: 1rem;
			left: 1rem;
		}
	}
</style>
